<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Font?>

<FlowPane alignment="TOP_CENTER" orientation="VERTICAL" prefHeight="500.0" prefWidth="500.0" vgap="50.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="BMS.View_Account_Details">
   <children>
      <FlowPane alignment="CENTER" columnHalignment="CENTER" orientation="VERTICAL" prefHeight="90.0" prefWidth="200.0">
         <children>
            <ImageView fitHeight="94.0" fitWidth="60.0" nodeOrientation="RIGHT_TO_LEFT" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../res/manipal%20logo.jpg" />
               </image>
               <FlowPane.margin>
                  <Insets />
               </FlowPane.margin>
            </ImageView>
            <Label text="Manipal Central Bank" textFill="#160d5e">
               <font>
                  <Font name="Comic Sans MS Bold" size="18.0" />
               </font>
            </Label>
         </children>
         <FlowPane.margin>
            <Insets top="10.0" />
         </FlowPane.margin>
      </FlowPane>
      <FlowPane alignment="CENTER" columnHalignment="CENTER" orientation="VERTICAL" prefHeight="340.0" prefWidth="200.0" vgap="20.0">
         <children>
            <Label text="Account Details :">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
            <Label fx:id="lbAccountID" text="Account ID">
               <font>
                  <Font size="13.0" />
               </font>
            </Label>
            <Label fx:id="lbType" text="Type">
               <font>
                  <Font size="13.0" />
               </font>
            </Label>
            <Label fx:id="lbBalance" text="Balance">
               <font>
                  <Font size="13.0" />
               </font>
            </Label>
            <Label fx:id="lbInterest" text="Interest">
               <font>
                  <Font size="13.0" />
               </font>
            </Label>
            <Label textFill="#ff000d" />
            <Button fx:id="btnBack" mnemonicParsing="false" onAction="#PressBack" text="Back">
               <graphic>
                  <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../res/Back_Button.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </FlowPane>
   </children>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
</FlowPane>
